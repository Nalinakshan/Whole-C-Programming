//----------------------------------------------------------------------------------------------------

void sortnum(int array[], int size){
    for (int i = 0 ; i < size - 1; i++)
    {
        for (int j = 0 ; j < size - 1; j++)
    {
        if (array[j] > array[j+1])
        {
            int temp = array[j];
            array[j] = array[j+1];
            array[j+1] = temp;
        }
    }
    }
}

void printarraynum(int array[], int size)
{
    for(int i = 0; i < size ; i++)
    {
        printf("%d ", array[i]);
    }
}

//----------------------------------------------------------------------------------------------------

void sortchar(char array[], int size){
    for (int i = 0 ; i < size - 1; i++)
    {
        for (int j = 0 ; j < size - 1; j++)
    {
        if (array[j] > array[j+1])
        {
            char temp = array[j];
            array[j] = array[j+1];
            array[j+1] = temp;
        }
    }
    }
}

void printarraychar(char array[], int size)
{
    for(int i = 0; i < size ; i++)
    {
        printf("%c ", array[i]);
    }
}

//----------------------------------------------------------------------------------------------------

void hello(char[], int); //function prototype
double square (double z)
{
    return z*z;
}

//----------------------------------------------------------------------------------------------------

void birthday(char x[], int y)
{
    printf("\nHappy Birthday to You\nHappy Birthday to You\nHappy Birthday Dear %s\nHappy Birthday to You.\nFrom good friends and true,\nFrom old friends and new,\nMay good luck go with you,\nAnd happiness too.\nAlternative ending:\nHow old are you?\nHow old are you?\nHow old, How old\nHow old are you?\n", x );
    printf("You are %d years old!\n", y);
}

