    // | = OR
    // ^ = XOR
    // <<  left shift
    // >>  right shift

    int xy = 6;  //    6 = 00000110
    int yz = 12; //   12 = 00001100 
    int zx = 0;  //    0 = 00000000

    zx = xy & yz;
    printf("AND = %d\n", zx);

    zx = xy | yz;
    printf("OR = %d\n", zx);

    zx = xy ^ yz;
    printf("XOR = %d\n", zx);

    zx = xy << 2;
